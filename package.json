{
  "name": "agentstatic",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./core": "./dist/core/index.js",
    "./partials": "./dist/partials/index.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/dev/server.ts",
    "build": "tsx esbuild.config.ts prod",
    "build:types": "tsc --emitDeclarationOnly",
    "build:pages": "node scripts/build-pages.js",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "clean": "rm -rf dist coverage pages-dist",
    "template:setup": "node scripts/setup-template.js",
    "pages:preview": "cd pages-dist && python -m http.server 8080",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.25.0",
    "unified": "^11.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "date-fns": "^3.6.0",
    "lodash-es": "^4.17.21",
    "sharp": "^0.33.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/lodash-es": "^4.17.12",
    "typescript": "^5.7.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.0",
    "vitest": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "tests/**/*.{ts,js}": [
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "static-site-generator",
    "typescript",
    "mcp",
    "ai-native",
    "portfolio",
    "cms",
    "partials",
    "zod"
  ],
  "author": "AgentStatic Team",
  "license": "MIT",
  "description": "AI-Native Static Site Generator with TypeScript-first templating and MCP integration"
}
