#!/usr/bin/env sh

# Exit on any error
set -e

echo "ğŸš€ AgentStatic Pre-push Validation Starting..."

# Integration Tests (if they exist)
if [ -d "tests/integration" ] && [ "$(ls -A tests/integration/*.test.ts 2>/dev/null)" ]; then
  echo "âš¡ Running integration tests..."
  npm run test -- tests/integration
  if [ $? -ne 0 ]; then
    echo "âŒ Integration tests failed! Cannot push to remote."
    echo "ğŸ’¡ Hint: Fix integration test failures before pushing."
    exit 1
  fi
  echo "âœ… Integration tests passed!"
else
  echo "â„¹ï¸  No integration tests found, skipping..."
fi

# Final build check
echo "âš¡ Running final build check..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed! Cannot push to remote."
  exit 1
fi
echo "âœ… Build successful!"

# Type safety double-check
echo "âš¡ Final TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors detected! Cannot push to remote."
  exit 1
fi
echo "âœ… TypeScript check passed!"

echo "ğŸ‰ All pre-push checks passed! Pushing to remote..."
echo ""
echo "âš ï¸  REMINDER: If you need to bypass these checks in an emergency:"
echo "   Use: git push --no-verify"
echo "   BUT you MUST fix any issues immediately!"
echo ""